---
interface Props {
  title: string;
  description: string;
  author: string;
  tags: string[];
  href: string;
}

const { title, description, author, tags, href } = Astro.props;
---

<div
  class="p-4 sm:p-6 lg:p-4 xl:p-6 items-start flex border rounded border-2 border-indigo-600 bg-white shadow-xl flex-col"
>
  <div class="mb-4">
    <a
      href={href}
      class="text-xl text-indigo-600 hover:underline mb-4 font-semibold"
      >{title}</a
    >
    <p>{description}</p>
  </div>

  <div class="flex flex-row w-full justify-between p-0">
    <div class="text-sm font-semibold">{author}</div>
    <div class="flex flex-row">
      {
        tags.map((tag) => (
          <div class="flex flex-row items-center justify-center bg-indigo-600 text-white rounded-full px-3 py-1 text-sm font-semibold mr-2">
            {tag}
          </div>
        ))
      }
    </div>
  </div>
</div>
