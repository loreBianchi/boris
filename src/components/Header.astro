---
const navItems = [
  {
    name: 'About',
    url: '/about'
  },
  {
    name: 'Blog',
    url: '/blog'
  }
] 
---
<!-- component -->
<nav class="flex justify-between md:px-20 px-5 md:py-10 py-6 items-center bg-transparent min-h-[106px]">
  <h1 class="text-xl text-gray-800 font-bold hidden md:block">
    <a href="/">Lorenzo Bianchi</a>
  </h1>
  <div class="items-center hidden md:flex">
    <div class="flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 pt-0.5 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
      <input class="ml-2 outline-none bg-transparent font-" type="text" name="search" id="search" placeholder="Search..." />
    </div>
    <ul class="flex items-center space-x-6">
      {navItems.map((item) => (
        <li class="font-semibold text-gray-700"><a href={item.url}>{item.name}</a></li>
      ))}
    </ul>
  </div>
  <!-- MOBILE NAVBAR -->
  <div class="flex md:hidden">
    <a href="/" class="text-xl text-gray-800 font-bold">LB</a>

  </div>
  <div class="flex md:hidden">
    <button type="button" class="text-gray-500 hover:text-gray-600 focus:outline-none focus:text-gray-600" aria-label="toggle menu">
      <svg viewBox="0 0 24 24" class="h-6 w-6 fill-current">
        <path
          fill-rule="evenodd"
          clip-rule="evenodd"
          d="M3 5h18v1.5H3V5zm0 7h18v1.5H3V12zm0 7h18v1.5H3v-1.5z"
        ></path>
      </svg>
    </button>
  </div>
</nav>




