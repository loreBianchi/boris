---
import Layout from "../layouts/Layout.astro";
---

<Layout title="page not found">
  <main>
    <!-- Page Container -->
    <div class="flex items-center justify-center py-20">
      <div class="flex flex-col">
        <div class="flex flex-col items-center">
          <div class="text-indigo-500 font-bold text-7xl">404</div>

          <div
            class="font-bold text-3xl xl:text-7xl lg:text-6xl md:text-5xl mt-10"
          >
            This page does not exist
          </div>

          <div
            class="text-gray-400 font-medium text-sm md:text-xl lg:text-2xl mt-8"
          >
            The page you are looking for could not be found.
          </div>
          <a
            href="/"
            class="mt-5 bg-slate-900 hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-slate-400 focus:ring-offset-2 focus:ring-offset-slate-50 text-white font-semibold h-12 px-6 rounded-lg w-full flex items-center justify-center sm:w-auto"
            >&larr; Return Home</a
          >
        </div>
      </div>
    </div>
  </main>
</Layout>
