---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <section class="max-w-5xl mx-auto">
      About
    </section>
  </main>
</Layout>

<style is:global>
  body {
    background-image: linear-gradient(#e0e0f4 1px, transparent 1px),
      linear-gradient(to right, #e0e0f4 1px, transparent 1px);
    background-size: 35px 35px;
    background-color: #fff;
  }

  .clip-path {
    clip-path: circle(50% at 50% 50%);
    width: 100%;
    height: auto;
  }
</style>
